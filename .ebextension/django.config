option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: busapp.wsgi:application  # Adjust this path based on your project structure
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "busapp.settings"
    PYTHONPATH: "/opt/python/current/app/busapp:$PYTHONPATH"  # Adjust the path according to your application structure
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: "staticfiles"

container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python manage.py migrate --noinput"
    leader_only: true
  02_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python manage.py collectstatic --noinput"
    leader_only: true

